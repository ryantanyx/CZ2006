<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/comparisonBackButton"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_backarrow"
            android:layout_margin="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/comparisonSchDetails"
            android:layout_width="100dp"
            android:layout_height="27dp"
            android:text="Compare School Details"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"
            android:layout_margin="18dp"
            android:textStyle="bold"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_below="@id/comparisonSchDetails">
            <ScrollView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/leftDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/schName1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="18dp"
                        android:layout_marginLeft="12dp"
                        android:gravity="center"
                        android:text="School Name"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <ImageView
                        android:id="@+id/schLogo1"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentLeft="true"
                        android:layout_margin="12dp"
                        android:layout_below="@id/schName1"
                        app:srcCompat="@drawable/ic_launcher_background"/>

                    <TextView
                        android:id="@+id/schVision1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/schLogo1"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:text="School Vision"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="italic" />



                    <TextView
                        android:id="@+id/schMission1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/schVision1"
                        android:layout_margin="24dp"
                        android:text="School Mision"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/schCutOff1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/schMission1"
                        android:layout_marginLeft="24dp"
                        android:text="Cut Off Points"
                        android:layout_marginRight="24dp"
                        android:layout_marginTop="12dp"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/schGender1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/schCutOff1"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginTop="12dp"
                        android:text="School gender"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/schGender1">

                        <com.example.myapplication.NonScrollExpandableListView
                            android:id="@+id/expandableListView1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/schGender"
                            android:nestedScrollingEnabled="true"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="12dp" />
                    </LinearLayout>

                </RelativeLayout>
            </ScrollView>

            <ScrollView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/rightDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/schName2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="18dp"
                        android:layout_marginLeft="12dp"
                        android:gravity="center"
                        android:text="School Name"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <ImageView
                        android:id="@+id/schLogo2"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentLeft="true"
                        android:layout_margin="12dp"
                        android:layout_below="@id/schName2"
                        app:srcCompat="@drawable/ic_launcher_background"/>

                    <TextView
                        android:id="@+id/schVision2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/schLogo2"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:text="School Vision"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="italic" />



                    <TextView
                        android:id="@+id/schMission2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/schVision2"
                        android:layout_margin="24dp"
                        android:text="School Mision"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/schCutOff2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/schMission2"
                        android:layout_marginLeft="24dp"
                        android:text="Cut Off Points"
                        android:layout_marginRight="24dp"
                        android:layout_marginTop="12dp"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/schGender2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/schCutOff2"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginTop="12dp"
                        android:text="School gender"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/schGender2">

                        <com.example.myapplication.NonScrollExpandableListView
                            android:id="@+id/expandableListView2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/schGender"
                            android:nestedScrollingEnabled="true"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="12dp"
                            />
                    </LinearLayout>

                </RelativeLayout>
            </ScrollView>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>